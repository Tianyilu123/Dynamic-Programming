class Solution {
    public int coinChange(int[] coins, int amount) {
        int[] m = new int[amount + 1];
        for(int i=0; i<=amount; i++) {
            m[i] = -1;
        }
        m[0] = 0;
        for(int a=1; a<=amount; a++) {
            for(int c: coins) {
                if(a>=c && m[a-c] != -1) {
                    m[a] = (m[a] == 1? (m[a-c]+1) : Math.min(m[a], m[a-c]+1));
                }
            }
        }
        return m[amount];
    }
}

// time: O(n * amount);
// space: O(amount);
